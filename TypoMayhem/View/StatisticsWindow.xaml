<Window x:Class="TypoMayhem.View.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TypoMayhem.View"
        mc:Ignorable="d"
        Title="StatisticsWindow" Height="350" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" Text="Typing Session Statistics" FontSize="20" FontWeight="Bold" Margin="10"/>
            <TextBlock HorizontalAlignment="Center" Text="{Binding CourseName, StringFormat='Course: {0}'}" Margin="10"/>
            <TextBlock HorizontalAlignment="Center" Text="{Binding SessionDuration, StringFormat='Session Duration: {0} Minute(s)'}" Margin="10"/>
            <TextBlock HorizontalAlignment="Center" Text="{Binding SignsPerMinute, StringFormat='Signs Per Minute: {0}'}" Margin="10"/>
            <TextBlock HorizontalAlignment="Center" Text="{Binding WordsPerMinute, StringFormat='Words Per Minute: {0}'}" Margin="10"/>
            <TextBlock HorizontalAlignment="Center" Text="{Binding ErrorCount, StringFormat='Error Count: {0}'}" Margin="10"/>
            <Button Content="Close" Width="100" Height="30" Margin="10" HorizontalAlignment="Center" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
