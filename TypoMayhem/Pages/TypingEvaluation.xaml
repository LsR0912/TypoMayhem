<Page x:Class="TypoMayhem.Pages.TypingEvaluation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TypoMayhem.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TypingEvaluation">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Monthly Statistics"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,20" />


        <StackPanel Grid.Row="1"
                    Grid.RowSpan="2"
                    Margin="10">
            <TextBlock Text="Summary"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,10" />
            <TextBlock Text="{Binding TotalErros , StringFormat='Total Errors: {0}'}"
                       FontSize="14" />
            <TextBlock Text="{Binding AvgWPM, StringFormat='Average Words Per Minute: {0}'}"
                       FontSize="14" />
            <TextBlock Text="{Binding TotalSessionDuration,StringFormat='Total Session Duration: {0}'}"
                       FontSize="14" />
        </StackPanel>
    </Grid>
</Page>
